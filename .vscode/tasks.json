{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-crowdshipping",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp", "lib/*",
                "-d", "bin",
                "src/*.java"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "run-crowdshipping",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", "bin:lib/*",
                "CrowdShippingApp"
            ],
            "group": "build",
            "dependsOn": "compile-crowdshipping",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
